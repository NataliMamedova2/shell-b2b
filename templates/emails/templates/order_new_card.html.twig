{% extends 'emails/layout.html.twig' %}

{% block content %}
    <table border="0" cellpadding="0" cellspacing="0" style="width: 100%;">
        <tbody>
        <tr>
            <td style="border-bottom:1px solid #f6f6f6;">
                <h1 style="font-size:14px; font-family:arial; font-weight:bold; margin: 0px 0px 10px;">
                    Order new card
                </h1>
            </td>
        </tr>
        <tr>
            <td style="padding:10px 0 30px 0;">
                <p>
                    <label>Компанія</label>: {{ client.fullName }}
                </p>
                <p>
                    <label>ПІБ</label>: {{ name }}
                </p>
                <p>Left order for: <strong>{{ count }}</strong> card</p>
                <p>
                    <label>Телефон</label>: {{ phone }}
                </p>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}